    <StackLayout WidthRequest="250">
        <Entry IsEnabled="False" x:Name="ENTRY" TextColor="Black">
        </Entry>
        <Entry IsEnabled="False" x:Name="RES" TextColor="Black">
        </Entry>
        <Grid Padding="10"
              BackgroundColor="Gray" 
              ColumnSpacing="10" ColumnDefinitions="50,50,50,50" 
              RowSpacing="10" RowDefinitions="50,50,50,50,50"
              >
            <Button Grid.Row="0" Grid.Column="0" Text="CE" Background="Coral" Clicked="ClearAll_Clicked" ></Button>
            <Button Grid.Row="0" Grid.Column="1" Text="C" Background="Coral" Clicked="Clear_Clicked" ></Button>
            <Button Grid.Row="0" Grid.Column="2" Text="+/-" TextColor="Black" Background="White" Clicked="Button_Clicked" ></Button>
            <Button Grid.Row="0" Grid.Column="3" Text="/" TextColor="black" Background="White" Clicked="Operator_Clicked" ></Button>
            <Button Grid.Row="1" Grid.Column="0" Text="7" TextColor="black" Background="White" Clicked="Button_Clicked" ></Button>
            <Button Grid.Row="1" Grid.Column="1" Text="8" TextColor="black" Background="White" Clicked="Button_Clicked" ></Button>
            <Button Grid.Row="1" Grid.Column="2" Text="9" TextColor="black" Background="White" Clicked="Button_Clicked" ></Button>
            <Button Grid.Row="1" Grid.Column="3" Text="*" TextColor="black" Background="White" Clicked="Operator_Clicked" ></Button>
            <Button Grid.Row="2" Grid.Column="0" Text="4" TextColor="black" Background="White" Clicked="Button_Clicked" ></Button>
            <Button Grid.Row="2" Grid.Column="1" Text="5" TextColor="black" Background="White" Clicked="Button_Clicked" ></Button>
            <Button Grid.Row="2" Grid.Column="2" Text="6" TextColor="black" Background="White" Clicked="Button_Clicked" ></Button>
            <Button Grid.Row="2" Grid.Column="3" Text="-" TextColor="black" Background="White" Clicked="Operator_Clicked" ></Button>
            <Button Grid.Row="3" Grid.Column="0" Text="1" TextColor="black" Background="White" Clicked="Button_Clicked"></Button>
            <Button Grid.Row="3" Grid.Column="1" Text="2" TextColor="black" Background="White" Clicked="Button_Clicked"></Button>
            <Button Grid.Row="3" Grid.Column="2" Text="3" TextColor="black" Background="White" Clicked="Button_Clicked" ></Button>
            <Button Grid.Row="3" Grid.Column="3" Text="+" TextColor="black" Background="White" Clicked="Operator_Clicked" ></Button>
            <Button Grid.Row="4" Grid.Column="0" Text="0" TextColor="black" Background="White" Clicked="Button_Clicked"></Button>
            <Button Grid.Row="4" Grid.Column="1" Text="." TextColor="black" Background="White"></Button>
            <Button Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="3" Text="=" TextColor="black" Background="White" Clicked="Result_Clicked"></Button>
        </Grid>
    </StackLayout>

</ContentPage>
